@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex min-h-svh w-full items-center justify-center">


    <div class="mx-5 flex max-w-md flex-col gap-5 bg-white px-9 py-9 shadow-sm md:mx-0 md:max-w-lg md:px-8">

        <div class="flex flex-col gap-4">
            <h1 class="mb-2 text-center text-4xl font-medium">@ViewData["Title"]</h1>
            <p class="text-muted-foreground text-center text-sm">Create your account and start exploring the latest trends and exclusive offers made for you.</p>
            <form id ="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="flex flex-col gap-4">
                    <div asp-validation-summary="ModelOnly" class="border border-destructive/40 px-2 py-2 text-center text-sm text-destructive"></div>
                    <div  class="flex flex-col gap-2">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" autocomplete="username" aria-required="true"
                               class="h-9 w-full rounded-xs border-[#D9D9D9] border-[0.5px] pl-4 placeholder:text-sm placeholder:text-[#D9D9D9]" placeholder="you@example.com" />
                        <span asp-validation-for="Input.Email"></span>
                    </div>
                    <div class="flex flex-col gap-2">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="At least 8 characters  A-z , 0-9 , symbol"
                               class="h-9 w-full rounded-xs border-[#D9D9D9] border-[0.5px] pl-4 placeholder:text-sm placeholder:text-[#D9D9D9]" placeholder="you@example.com" />
                         <span asp-validation-for="Input.Password"></span>
                    </div>
                    <div class="flex flex-col gap-2">   
                        <label asp-for="Input.ConfirmPassword" class="form-label">ConfirmPassword</label>
                        <input asp-for="Input.ConfirmPassword" autocomplete="current-password" aria-required="true" placeholder="At least 8 characters  A-z , 0-9 , symbol"
                               class="h-9 w-full rounded-xs border-[#D9D9D9] border-[0.5px] pl-4 placeholder:text-sm placeholder:text-[#D9D9D9]" placeholder="you@example.com" />
                               <span asp-validation-for="Input.ConfirmPassword"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="mt-3 w-full border-[0.5px] bg-primary px-4 py-2 text-base text-white transition-colors duration-200 hover:cursor-pointer hover:bg-transparent hover:text-primary">Sign in</button>
                </div>
            </form>
            <div>
                <div class="flex items-center gap-5">
                    <div class="h-px flex-1 bg-gray-300"></div>
                    <span class="text-xs font-medium text-gray-400">OR</span>
                    <div class="h-px flex-1 bg-gray-300"></div>
                </div>
            </div>
        </div>
        <div class="flex w-full items-center justify-center gap-3">
            <section class="w-full">
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                            <p>
                                There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                    article
                                    about setting up this ASP.NET application to support logging in via external services
                                </a>.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-full">
                            <div class="w-full">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="flex w-full items-center justify-center gap-4 border-[0.5px] border-primary px-4 py-2 transition-colors duration-200 hover:cursor-pointer hover:bg-primary hover:text-white" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 48 48"><path fill="#ffc107" d="M43.611 20.083H42V20H24v8h11.303c-1.649 4.657-6.08 8-11.303 8c-6.627 0-12-5.373-12-12s5.373-12 12-12c3.059 0 5.842 1.154 7.961 3.039l5.657-5.657C34.046 6.053 29.268 4 24 4C12.955 4 4 12.955 4 24s8.955 20 20 20s20-8.955 20-20c0-1.341-.138-2.65-.389-3.917" /><path fill="#ff3d00" d="m6.306 14.691l6.571 4.819C14.655 15.108 18.961 12 24 12c3.059 0 5.842 1.154 7.961 3.039l5.657-5.657C34.046 6.053 29.268 4 24 4C16.318 4 9.656 8.337 6.306 14.691" /><path fill="#4caf50" d="M24 44c5.166 0 9.86-1.977 13.409-5.192l-6.19-5.238A11.9 11.9 0 0 1 24 36c-5.202 0-9.619-3.317-11.283-7.946l-6.522 5.025C9.505 39.556 16.227 44 24 44" /><path fill="#1976d2" d="M43.611 20.083H42V20H24v8h11.303a12.04 12.04 0 0 1-4.087 5.571l.003-.002l6.19 5.238C36.971 39.205 44 34 44 24c0-1.341-.138-2.65-.389-3.917" /></svg>
                                        Sign in with Google
                                    </button>
                                }
                            </div>
                        </form>
                    }
                }
            </section>

        </div>
        <div class="flex items-center justify-center">
            <p class="text-muted-foreground text-sm">Don't have an account? <a class="font-semibold text-primary" asp-page="/Account/Login">Sign up</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
