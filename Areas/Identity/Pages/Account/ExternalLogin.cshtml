@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}


<div class="flex min-h-svh w-full items-center justify-center pt-20 md:pt-0">


    <div class="mx-5 flex max-w-md flex-col gap-5 bg-white px-9 py-9 shadow-sm md:mx-0 md:max-w-lg md:px-8">
    <div class="flex flex-col items-center">
            <h1 class="mb-2 text-center text-2xl font-medium md:text-4xl">@ViewData["Title"]</h1>


            <h2 id="" class="text-muted-foreground text-center">Associate your @Model.ProviderDisplayName account.</h2>
    </div>

        <div class="h-px flex-1 border-b border-border"></div>


        <p id="external-login-description" class="">
            You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
            Please enter an email address for this site below and click the Register button to finish
            logging in.
        </p>

        <div class="row">
            <div class="col-md-4">
                <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="flex items-center gap-3">
                        <input asp-for="Input.Email" autocomplete="email" aria-required="true" placeholder="At least 8 characters  A-z , 0-9 , symbol"
                               class="h-9 w-full rounded-xs border-[#D9D9D9] border-[0.5px] pl-4 placeholder:text-sm placeholder:text-[#D9D9D9]" placeholder="you@example.com" />
                         <label asp-for="Input.Email" class="form-label"></label> 
                        <span asp-validation-for="Input.Email" class="border border-border"></span>
                    </div>
                    <button id="login-submit" type="submit" class="mt-3 w-full border-[0.5px] bg-primary px-4 py-2 text-base text-white transition-colors duration-200 hover:cursor-pointer hover:bg-transparent hover:text-primary">Register</button>

                </form>
            </div>
        </div>


        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
