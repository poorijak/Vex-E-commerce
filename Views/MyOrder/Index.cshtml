@model List<Vex_E_commerce.Models.Order>

@{
    ViewData["Title"] = "My Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string current = (ViewBag.Status ?? "pending").ToLower();
}

<div class="mx-auto min-h-screen max-w-[1400px] px-4 pt-44 pb-10 md:pt-10">

    <!-- Breadcrumb -->
    <div class="mb-4 flex items-center gap-2 pt-4 text-sm font-medium">
        <a asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-black">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
        </a>

        <a asp-controller="Home" asp-action="Index" class="text-gray-500 hover:text-black">
            Home
        </a>

        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none"
             viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M9 5l7 7-7 7" />
        </svg>

        <span class="font-bold text-black">My Orders</span>
    </div>

    <div class="mt-8 flex flex-col gap-8 md:mt-12 md:flex-row md:gap-0">

        <!-- Sidebar -->
        <aside class="mb-4 md:mb-0 md:w-60 md:border-r md:border-gray-200 md:pr-10">
            <div class="mb-4">
                <p class="text-sm text-gray-500">Welcome back,</p>
                <p class="truncate text-base font-medium text-black">@User.Identity?.Name</p>
            </div>

            <hr class="my-4 border-gray-200" />

            <nav class="flex flex-row flex-wrap items-center gap-4 pt-4 text-base md:flex-col md:items-start">
                <a href="/MyOrder" class="flex items-center gap-3 text-black">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <span class="font-medium">My Orders</span>
                </a>

                <a href="/Wishlist" class="flex items-center gap-3 text-gray-500 hover:text-black">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                    <span class="font-medium">Wishlist</span>
                </a>
            </nav>
        </aside>

        <!-- Main content -->
        <main class="flex-1 md:pl-16">

            <!-- Title + Tabs -->
            <div class="mb-5 flex flex-col items-start gap-4 md:flex-row md:items-center md:justify-between">
                <h1 class="text-xl font-bold">My Orders</h1>

                <!-- Status Tabs -->
                <div class="w-full md:w-auto">
                    <div class="overflow-x-auto px-4 md:px-0">
                        <div class="flex gap-1 rounded-xl bg-gray-100 p-1 text-xs sm:text-sm font-medium whitespace-nowrap">

                            <a href="/MyOrder?status=pending"
                               class="inline-flex items-center justify-center rounded-lg px-4 py-2 @(current == "pending" ? "bg-white text-black shadow-sm" : "text-gray-500 hover:text-black")">
                                Pending
                            </a>

                            <a href="/MyOrder?status=paid"
                               class="inline-flex items-center justify-center rounded-lg px-4 py-2 @(current == "paid" ? "bg-white text-black shadow-sm" : "text-gray-500 hover:text-black")">
                                Paid
                            </a>

                            <a href="/MyOrder?status=shipped"
                               class="inline-flex items-center justify-center rounded-lg px-4 py-2 @(current == "shipped" ? "bg-white text-black shadow-sm" : "text-gray-500 hover:text-black")">
                                Shipping
                            </a>

                            <a href="/MyOrder?status=delivered"
                               class="inline-flex items-center justify-center rounded-lg px-4 py-2 @(current == "delivered" ? "bg-white text-black shadow-sm" : "text-gray-500 hover:text-black")">
                                Delivered
                            </a>

                            <a href="/MyOrder?status=cancelled"
                               class="inline-flex items-center justify-center rounded-lg px-4 py-2 @(current == "cancelled" ? "bg-white text-black shadow-sm" : "text-gray-500 hover:text-black")">
                                Cancelled
                            </a>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Loop Orders -->
            <div class="space-y-6">

                @if (!Model.Any())
                {
                    <div class="text-center py-10 text-gray-500 text-sm">
                        No orders found for this status.
                    </div>
                }

                @foreach (var o in Model)
                {
                    <div class="rounded-xl border border-gray-200 bg-white p-4 sm:p-6">

                        <!-- Header -->
                        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between text-xs sm:text-sm font-medium">
                            <div class="flex items-center gap-2 min-w-0">
                                <span class="text-gray-700 truncate">Order # @o.OrderNumber</span>
                            </div>

                            <!-- Status Badge -->
                            <span class="inline-flex items-center justify-center rounded-full px-3 py-1 text-[11px] sm:text-xs font-semibold border
                                    @(o.status == OrderStatus.pending ? "bg-yellow-200/40 text-yellow-700 border-yellow-300" :
                                                                    o.status == OrderStatus.paid ? "bg-blue-200/40 text-blue-700 border-blue-300" :
                                                                    o.status == OrderStatus.shipped ? "bg-indigo-200/40 text-indigo-700 border-indigo-300" :
                                                                    o.status == OrderStatus.delivered ? "bg-green-200/40 text-green-700 border-green-300" :
                                                                                                        "bg-red-200/40 text-red-700 border-red-300")">
                            ● @o.status
                        </span>
                    </div>

                        <hr class="my-4" />

                        <!-- ITEMS -->
                    @foreach (var item in o.Items)
                        {
                            <div class="flex flex-row gap-4 py-4 border-b">
                                <div class="shrink-0">
                                    <img src="@item.variant.Product.PictureUrl"
                                         class="h-20 w-20 rounded-md object-cover" />
                                </div>

                                <div class="flex flex-1 flex-col min-w-0">
                                    <p class="text-sm font-medium truncate">@item.variant.Product.Title</p>
                                    <p class="text-xs text-gray-500">x @item.quantity</p>
                                    <p class="mt-1 text-sm font-semibold">@item.price ฿</p>
                                </div>
                            </div>
                        }

                        <!-- TOTAL -->
                        <div class="flex flex-wrap items-center justify-between gap-2 pt-4">
                            <span class="text-gray-500 font-medium">Total :</span>
                            <span class="font-bold text-gray-800">@o.totalAmount ฿</span>
                        </div>

                    </div>
                }
            </div>

        </main>
    </div>
</div>
