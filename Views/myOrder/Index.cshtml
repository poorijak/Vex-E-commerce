@model Vex_E_commerce.Models.OrderDetailVm

@{
}


<div class="mx-5 pt-40 md:mx-30 md:pt-30">
    <div>
       <div class="flex flex-col gap-2">
            <h1 class="text-2xl font-bold">#@Model.OrderNumber</h1>
            <p class="text-muted-foreground">Order date <span class="font-medium text-primary">@Model.CreatedAt</span></p>
       </div>
        <p></p>
    </div>
    <div class="mt-10 grid grid-cols-1 gap-3 md:grid-cols-5">
        <section class="col-span-3 flex h-auto flex-col gap-2 rounded-md border border-border bg-white p-5">
            <h2 class="text-xl font-bold">Order Detail</h2>
            <div class="h-px border-b border-border"></div>
            <div class="mt-2">
                @foreach(var items in Model.Items)
                {
                    <div class="flex items-center justify-between gap-5">
                        <div class="flex items-center gap-5">
                            <img src="@items.PictureUrl" class="size-20 object-cover" />
                            <div class="flex flex-col gap-1">
                                <p class="text-lg font-semibold">@items.ProductTitle</p>
                                <p class="text-muted-foreground text-sm">@items.VariantText</p>
                            </div>
                        </div>

                      <div class="flex items-center gap-10">
                            <p>x @items.Quantity</p>
                            <p>@items.UnitPrice ฿</p>
                      </div>
                    </div>
                    <div class="mt-4 h-px border-b border-border @(Model.Items.Count <= 1  ? "hidden" : "block")"></div>

                }
            </div>
        </section>
        <section class="col-span-2 rounded-md border border-border bg-white p-5">
            <h2 class="text-xl font-bold">Order Summary</h2>
            <div class="mt- my-5 h-px border-b border-border"></div>

            <div class="flex flex-col gap-3">
                <div class="flex items-center justify-between">
                    <label class="text-muted-foreground">Subtotal : </label>
                    <p class="font-semibold">@Model.ItemsTotal ฿</p>
                </div>
                <div class="h-px border-b border-border"></div>
                <div class="flex items-center justify-between">
                    <label class="text-muted-foreground">Shipping Fee : </label>
                    <p class="font-semibold">@Model.ShippingFee ฿</p>
                </div>
                <div class="flex items-center justify-between">
                    <label class="text-muted-foreground">Tax : </label>
                    <p class="font-semibold">@Model.Tax ฿</p>
                </div>
                <div class="h-px border-b border-border"></div>
                <div class="flex items-center justify-between">
                    <label class="font-semibold text-primary">Total : </label>
                    <p class="font-semibold">@Model.TotalAmount ฿</p>
                </div>

                <img class="size-60 object-cover" src="https://promptpay.io/@ViewBag.Phone/@Model.TotalAmount">
            </div>
        </section>

        <section class="col-span-3 flex flex-col gap-2 rounded-md border border-border bg-white p-5">
            <h2 class="text-xl font-bold">Address Infomation</h2>
            <div class="h-px border-b border-border"></div>
            <div class="mt-2 grid grid-cols-2 gap-3">
                <div>
                    <label class="text-muted-foreground text-sm">Name : </label>
                    <p class="text-lg font-semibold">@Model.Address.Name</p>
                </div>
                <div>
                    <label class="text-muted-foreground text-sm">Phone : </label>
                    <p class="text-lg font-semibold">@Model.Address.Phone</p>
                </div>
                <div>
                    <label class="text-muted-foreground text-sm">AddressDetail : </label>
                    <p class="text-lg font-semibold">@Model.Address.AddressDetail</p>
                </div>
                <div>
                    <label class="text-muted-foreground text-sm">Province : </label>
                    <p class="text-lg font-semibold">@Model.Address.Province</p>
                </div>
                <div>
                    <label class="text-muted-foreground text-sm">Postal Code : </label>
                    <p class="text-lg font-semibold">@Model.Address.PostalCode</p>
                </div>
                <div>
                    <label class="text-muted-foreground text-sm">Note : </label>
                    <p class="text-lg font-semibold">@Model.Address.Note</p>
                </div>
            </div>
        </section>
        
    </div>
</div>