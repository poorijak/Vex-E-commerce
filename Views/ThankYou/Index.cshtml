@model Vex_E_commerce.Models.Cart

@{
    ViewData["Title"] = "Thank You";
}

<div class="container mx-auto p-4">
    <div class="flex flex-col items-center justify-center gap-4 mt-10">

        <img src="~/Icon/sucess.svg" class="block mx-auto w-[100px] h-auto max-w-[200px] sm:max-w-[250px] md:max-w-[300px]" />

        <h1 class="text-2xl sm:text-3xl md:text-5xl font-bold mt-8 sm:mt-10 text-center">
            Thanks for the order!
        </h1>

        <div class="flex flex-col sm:flex-row items-center gap-1 sm:gap-2 mt-2">
            <span class="text-gray-500 font-semibold text-xs sm:text-sm">YOUR ORDER NUMBER:</span>
            <span class="font-medium text-xs sm:text-sm break-all">@Model.Id</span>
        </div>

        <p class="text-center max-w-xl px-2 mt-4 text-sm sm:text-base">
            Thank you for your order! 🎉 Your purchase has been successfully received.
            We’ll notify you once your package is on its way.
        </p>

        <a asp-controller="Home" asp-action="Index"
           class="text-blue-600 underline hover:text-blue-800 font-bold mt-6 text-sm sm:text-base">
            GO TO HOMEPAGE
        </a>
    </div>
</div>