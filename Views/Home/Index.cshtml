@model List<Vex_E_commerce.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var colorList = new[]
   {
        new { style = "bg-red-600"      },
        new { style = "bg-neutral-900"  },
        new { style = "bg-white border" },
    };

}


<div class="bg-[#fafafa] pt-16 md:pt-[76px]">
    <section class="relative h-svh w-full">
        <img class="h-full w-full object-cover object-[50%_25%]" src="https://images.unsplash.com/photo-1523398002811-999ca8dec234?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=3705" />
            <div class="absolute bottom-32 w-full">
                <partial name="HomePagePartial/marquee" />
            </div>
            <div class="absolute right-2 bottom-36 md:right-40 md:bottom-64">
            <div class="flex items-center gap-4 rounded-full bg-white px-6 py-3 transition-colors duration-300 hover:cursor-pointer hover:bg-primary hover:text-white md:px-12 md:py-4">
                <a class="text-lg font-semibold md:text-xl">Shop Now!</a>
                <i class="ph-bold ph-arrow-up-right text-2xl md:text-3xl"></i>
              </div>
            </div>
    </section>
    <section class="mx-5 md:mx-32">
        <figure class="mt-10">
            <h2 class="flex items-center gap-2 text-3xl font-medium">
                Biggest 
                <span class="font-bold">Sales</span>
                Ever
            </h2>
                <div class="mt-10 grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-5 md:gap-10">
                @foreach(var i in Model)
                {
                    <a asp-route-id="@i.Id" asp-action="ProductDetail" asp-controller="Home" class="font-geist flex h-[276px] flex-col rounded-md border border-border bg-white p-4 transition-transform duration-200 hover:-translate-y-2 hover:cursor-pointer">
                        <div class="flex justify-end">
                            <p class="text-muted-foreground text-xs font-medium">@i.TotalSold SOLD</p>
                        </div>    
                        
                        <div class="my-4 flex items-center justify-center overflow-hidden">
                                <img src="@i.PictureUrl" class="size-24 object-cover md:size-28" />
                            </div>

                            <div class="flex flex-col gap-1">
                                <label class="line-clamp-1 text-xs font-semibold">@i.Title</label>
                                <div class="flex gap-1">
                                    @foreach (var c in colorList)
                                    {
                                        <div class="@c.style size-3 rounded-xs border border-border hover:cursor-pointer md:size-4">
                                        </div>
                                    }
                                </div>
                                <div class="flex items-end justify-between">
                                    <div class="mt-3 flex flex-col gap-1">
                                        <p class="text-muted-foreground text-xs font-medium md:text-xs">Start From</p>
                                        <p class="text-sm font-semibold">฿ @i.BasePrice</p>
                                    </div>
                                    <i class="ph ph-heart text-xl"></i>
                                </div>
                            </div>
                    </a>
                }
            </div>
        </figure>



    </section>

    <section class="mt-20 md:mt-40">
        <partial name="HomePagePartial/Banner-clip-path" />
    </section>

</div>


