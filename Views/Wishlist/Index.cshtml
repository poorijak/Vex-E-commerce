@model List<Vex_E_commerce.Models.ProductCardVm>

@{
    ViewData["Title"] = "Wishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var colorList = new[]
    {
        new { style = "bg-red-600" },
        new { style = "bg-black" },
        new { style = "bg-white border" }
    };
}

<!-- spacer ดันเนื้อหาลงมาอยู่ใต้ navbar -->
<div class="h-32 sm:h-36 md:h-40"></div>

<div class="max-w-[1400px] mx-auto px-4 pb-10 min-h-screen">
    <!-- Breadcrumb -->
    <div class="flex items-center gap-2 text-sm font-medium mb-4 pt-4">
        <a asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-black">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
        </a>
        <a asp-controller="Home" asp-action="Index" class="text-gray-500 hover:text-black">
            Home
        </a>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-black font-bold">My Profile</span>
    </div>

    <div class="flex flex-col md:flex-row mt-8 md:mt-12 gap-8 md:gap-0">
        <!-- Sidebar -->
        <aside class="md:w-60 md:pr-10 md:border-r md:border-gray-200 mb-4 md:mb-0">
            <div class="mb-4">
                <p class="text-sm text-gray-500">Welcome back,</p>
                <p class="text-base font-medium text-black truncate">@User.Identity?.Name</p>

            </div>

            <hr class="my-4 border-gray-200" />

            <!-- เมนู: mobile = แถว, desktop = คอลัมน์ -->
            <nav class="flex flex-row flex-wrap items-center gap-4 pt-4 text-base md:flex-col md:items-start">
                <a href="/Orders" class="flex items-center gap-3 text-gray-500 hover:text-black">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <span class="font-medium">My Orders</span>
                </a>

                <a href="/Wishlist" class="flex items-center gap-3 text-black">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                    <span class="font-medium">Wishlist</span>
                </a>
            </nav>
        </aside>

        <!-- Main content -->
        <main class="flex-1 md:pl-16">
            <h1 class="text-xl font-bold mb-5">Wishlist</h1>

            @if (!Model.Any())
            {
                <p class="text-sm text-gray-500">
                    No items in your wishlist yet.
                </p>
            }
            else
            {
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    @foreach (var i in Model)
                    {
                        <div class="font-geist flex flex-col rounded-md border border-border bg-white p-4">
                            <a asp-route-id="@i.Id"
                               asp-action="Index"
                               asp-controller="ProductDetail"
                               class="block">
                                <div class="flex justify-end">
                                    <p class="text-muted-foreground text-xs font-medium">@i.TotalSold SOLD</p>
                                </div>

                                <div class="my-4 flex items-center justify-center overflow-hidden">
                                    <img src="@i.PictureUrl"
                                         alt="@i.Title"
                                         class="size-24 object-cover md:size-28" />
                                </div>

                                <div class="flex flex-col gap-1">
                                    <label class="line-clamp-1 text-base font-semibold">@i.Title</label>

                                    <div class="mt-1 flex gap-1" aria-label="Available colors">
                                        @foreach (var c in colorList)
                                        {
                                            <div class="@c.style size-3 rounded-sm border border-border hover:cursor-pointer md:size-4"></div>
                                        }
                                    </div>
                                </div>
                            </a>

                            <div class="mt-3 flex items-end justify-between">
                                <div class="flex flex-col gap-1">
                                    <p class="text-muted-foreground text-xs font-medium md:text-xs">Start From</p>
                                    <p class="text-sm font-semibold">฿ @i.BasePrice.ToString("N0")</p>
                                </div>

                                <form method="post"
                                      asp-action="ToggleWishList"
                                      asp-controller="Home"
                                      class="wishlist-form"
                                      data-product-itemid="@i.Id">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@i.Id" />

                                    <button type="submit" class="heart-btn" aria-label="Toggle wishlist">
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             class="heart-outline @(i.IsWishlisted ? "hidden" : "") size-6"
                                             viewBox="0 0 256 256">
                                            <path d="M178,40c-20.65,0-38.73,8.88-50,23.89C116.73,48.88,98.65,40,78,40a62.07,62.07,0,0,0-62,62c0,70,103.79,126.66,108.21,129a8,8,0,0,0,7.58,0C136.21,228.66,240,172,240,102A62.07,62.07,0,0,0,178,40ZM128,214.8C109.74,204.16,32,155.69,32,102A46.06,46.06,0,0,1,78,56c19.45,0,35.78,10.36,42.6,27a8,8,0,0,0,14.8,0c6.82-16.67,23.15-27,42.6-27a46.06,46.06,0,0,1,46,46C224,155.61,146.24,204.15,128,214.8Z"></path>
                                        </svg>

                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             class="heart-fill size-6 fill-destructive @(i.IsWishlisted ? "" : "hidden")"
                                             viewBox="0 0 256 256">
                                            <path d="M240,102c0,70-103.79,126.66-108.21,129a8,8,0,0,1-7.58,0C119.79,228.66,16,172,16,102A62.07,62.07,0,0,1,78,40c20.65,0,38.73,8.88,50,23.89C139.27,48.88,157.35,40,178,40A62.07,62.07,0,0,1,240,102Z"></path>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
        </main>
    </div>
</div>
