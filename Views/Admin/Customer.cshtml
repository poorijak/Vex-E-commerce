@model List<Vex_E_commerce.Models.Customer>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    ViewData["Title"] = "Customer Management";

}



<div class="mx-5 md:mx-0">
    <div class="mb-3 flex flex-col items-start gap-3 md:flex-row md:items-center md:justify-between md:gap-0">
        <div>
            <h1 class="text-xl font-bold md:text-2xl">User Management</h1>
            <p class="text-muted-foreground text-xs md:text-sm">
                Manage all users in the system, including roles, statuses,
                and contact information.
            </p>
        </div>
    </div>

    <div class="my-5 h-px flex-1 border-b border-border"></div>

    <div class="my-4 flex justify-start md:w-64">
        <form asp-action="Customer" class="relative w-full" asp-controller="Admin">
            <input placeholder="name@example.com" name="keyword" value="@Context.Request.Query["keyword"]" class="h-9 w-full rounded-full border-[#D9D9D9] border-[0.5px] bg-white pl-8 text-sm placeholder:text-sm placeholder:text-[#D9D9D9]" />
            <svg xmlns="http://www.w3.org/2000/svg" class="fill fill-muted-foreground absolute top-2.5 left-2.5 size-4" viewBox="0 0 256 256"><path d="M229.66,218.34l-50.07-50.06a88.11,88.11,0,1,0-11.31,11.31l50.06,50.07a8,8,0,0,0,11.32-11.32ZM40,112a72,72,0,1,1,72,72A72.08,72.08,0,0,1,40,112Z"></path></svg>
            <a asp-action="Customer" asp-controller="Admin" class="absolute top-2.5 right-2.5 @(string.IsNullOrWhiteSpace(ViewBag.keyword as string) ? "hidden" : "")"><i class="ph ph-x"></i></a>
        </form>
    </div>


    <div >
        <div class="grid grid-cols-1 p-5 md:p-0">
            <div class="relative overflow-x-auto">
                <table class="text-muted-foreground w-full text-left text-sm rtl:text-right">
                    <thead class="text-muted-foreground bg-[#F4F4F5] text-xs uppercase">
                        <tr>

                            <th scope="col" class="px-6 py-3">
                                User Profile
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Email
                            </th>
                            <th scope="col" class="px-6 py-3 whitespace-nowrap">
                                Create at
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Status
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Role
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {

                            var profilePicture = user?.ProfilePictureUrl ?? "https://avatars.githubusercontent.com/u/124599?v=4";
                            <tr class="border-b border-gray-200 text-primary">
                                <th scope="row" class="px-6 py-4 whitespace-nowrap">
                                            <img src="~/Images/Avatar/Avatar.webp" class="size-6 rounded-full" />
                                </th>
                                <td class="px-6 py-4">
                                    @user.Email
                                </td>
                                <td class="px-6 py-4">
                                    @user.Status
                                </td>
                                <td class="px-6 py-4">
                                    @user.CreatedAt
                                </td>
                                <td class="px-6 py-4">
                                    @user.Role
                                </td>
                                <td class="px-6 py-4">
                                    <a asp-controller="Admin" asp-action="CustomerDetail" class="underline" asp-route-id="@user.Id">View</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
        

</div>


</div>
    <div class="mt-5 flex items-center justify-center gap-5 p-5 md:p-0">
        @if (ViewBag.Page > 1)
        {
            <a asp-action="Customer" class="w-auto border-[0.5px] bg-primary px-4 py-2 text-center text-xs font-semibold text-white transition-colors duration-200 hover:cursor-pointer hover:bg-transparent hover:text-primary md:w-auto" asp-route-page="@(ViewBag.Page - 1)">Prev</a>
        }

        <span>@ViewBag.Page / @ViewBag.TotalPages</span>

        @if (ViewBag.Page < ViewBag.TotalPages)
        {
            <a asp-action="Customer" class="w-auto border-[0.5px] bg-primary px-4 py-2 text-center text-xs font-semibold text-white transition-colors duration-200 hover:cursor-pointer hover:bg-transparent hover:text-primary md:w-auto" asp-route-page="@(ViewBag.Page + 1)">Next</a>
        }
    </div>
