    };


    var orderId = "#ORD7176220874";
    var createdAt = "2024-05-31 03:24";
    var status = "Shipping";

    var items = new[]
    {
        new {
            Title = "MEN’s Shirt Backpink in your area",
            Size = "L",
            Color = "White",
            Quantity = 3,
            Price = 1399,
            Total = 195,
            Picture = "https://img.lazcdn.com/g/p/53fa921ef83a0742fa78461353c131b2.jpg_720x720q80.jpg"
        },
        new {
            Title = "MEN’s Shirt Backpink in your area",
            Size = "L",
            Color = "Red",
            Quantity = 3,
