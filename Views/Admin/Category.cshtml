@model CategoryPageViewModel;
@{

    ViewData["Title"] = "Category Mangement";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<div class="flex w-full flex-col gap-4">
    <div class="mx-5 flex flex-col gap-4 md:mx-0">
        <div class="flex flex-col gap-2">
                <h1 class="text-2xl font-bold">Category Manager</h1>
                <p class="text-muted-foreground text-sm">Manage your product inventory and details</p>
        </div>
    </div>

     <div class="mx-5 h-px flex-1 border-b border-border"></div>

    <div class="mt-0 grid grid-cols-1 gap-4 md:mt-5 md:grid-cols-3">
        <div class="col-span-1">
            <div class="m-5 flex flex-col gap-3 rounded-sm border border-border bg-white p-5 px-4 md:m-0">
                <h1 class="text-base font-semibold">Add Category</h1>
                <div class="h-px flex-1 border-b border-border"></div>
               <form method="post" aspasp-controller="Admin" asp-action="CreateCategory">
                    <div class="flex flex-col gap-2">
                        <label class="text-sm font-medium" asp-for="Category.Title">Title</label>
                        <input asp-for="Category.Title" aria-required="true" placeholder="Enter your category title..."
                               class="h-9 w-full rounded-xs border-[#D9D9D9] border-[0.5px] pl-4 placeholder:text-sm placeholder:text-[#D9D9D9]"/>
                        <span></span>
                        <button type="submit" class="flex w-full items-center justify-center gap-4 border-[0.5px] bg-primary px-4 py-2 text-sm font-medium text-white transition-colors duration-200 hover:cursor-pointer hover:border-primary hover:bg-transparent hover:text-primary">Add Category</button>
                    </div>
               </form>
            </div>
        </div>
        <div class="col-span-1 p-6 md:col-span-2 md:p-0">

                    <div class="relative overflow-x-auto">
                <table class="text-muted-foreground w-full text-left text-sm rtl:text-right">
                    <thead class="text-muted-foreground bg-[#F4F4F5] text-xs uppercase">
                                <tr>

                                    <th scope="col" class="px-6 py-3">
                                        Id
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Title
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Create at
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                    <tbody>
                        @foreach(var item in Model.Categories)
                        {
                            <tr class="border-b border-gray-200 text-primary">
                                <th scope="row" class="px-6 py-4 font-semibold whitespace-nowrap">
                                    @item.Id
                                </th>
                                <td class="px-6 py-4">
                                    @item.Title
                                </td>
                                <td class="px-6 py-4">
                                   @item.CreatedAt
                                </td>
                                <td class="px-6 py-4">
                                    <form asp-action="DeleteCategory"
                                          asp-controller="Admin"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          class="inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="flex items-center justify-center rounded-xs border-destructive px-2 py-1 text-white transition-colors duration-150 hover:cursor-pointer hover:bg-destructive/70" title="Delete">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="size-4 fill-destructive hover:fill-white" viewBox="0 0 256 256"><path d="M205.66,194.34a8,8,0,0,1-11.32,11.32L128,139.31,61.66,205.66a8,8,0,0,1-11.32-11.32L116.69,128,50.34,61.66A8,8,0,0,1,61.66,50.34L128,116.69l66.34-66.35a8,8,0,0,1,11.32,11.32L139.31,128Z"></path></svg>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>