@* @model List<Vex_E_commerce.Models.Order> *@
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var orders = new[]
   {
        new { OrderId = "#ORD-001", Customer = "John", Date = "2025-02-01", Item = 3, Amount = 1500, Status = "Completed" },
        new { OrderId = "#ORD-002", Customer = "Alice", Date = "2025-02-03", Item = 1, Amount = 450, Status = "Pending" },
        new { OrderId = "#ORD-003", Customer = "Mark", Date = "2025-02-05", Item = 2, Amount = 900, Status = "Cancelled" }
    };
}


<div>
    <div class="mx-5 mb-3 flex flex-col items-start gap-3 md:flex-row md:items-center md:justify-between md:gap-0">
        <div>
            <h1 class="text-xl font-bold md:text-2xl">Orders Management</h1>
            <p class="text-muted-foreground text-xs md:text-sm">
                view and manage customer orders
            </p>
        </div>
    </div>

    <div class="my-5 h-px flex-1 border-b border-border"></div>

    <div>
        <div class="grid grid-cols-1 p-5 md:p-0">
            <div class="relative overflow-x-auto">
                <table class="w-full text-left text-sm rtl:text-right">
                    <thead class="text-muted-foreground bg-[#F4F4F5] text-xs uppercase dark:bg-gray-700 dark:text-gray-400">
                        <tr>

                            <th scope="col" class="px-6 py-3">
                                Order ID
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Customer
                            </th>
                            <th scope="col" class="px-6 py-3 whitespace-nowrap">
                                Date
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Item
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Amount
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Status
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in orders)
                        {

                            var profilePicture =  "https://avatars.githubusercontent.com/u/124599?v=4";
                            <tr class="border-b border-gray-200 text-primary">
                                <th scope="row" class="px-6 py-4 whitespace-nowrap">
                                    @i.OrderId
                                </th>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2 font-medium">
                                        <div>
                                            <img src="@profilePicture" class="size-6 rounded-full" />
                                        </div>
                                        @i.Customer
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    @i.Date
                                </td>
                                <td class="px-6 py-4">
                                    @i.Item
                                </td>
                                <td class="px-6 py-4">
                                    @i.Amount
                                </td>
                                <td class="px-6 py-4">
                                    @i.Status
                                </td>
                                <td class="px-6 py-4">
                                    <a asp-controller="Admin" asp-action="CustomerDetail" class="underline" asp-route-id="@i.OrderId">View</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>


    </div>


</div>
<div class="mt-5 flex items-center justify-center gap-5 p-5 md:p-0">
    @if (ViewBag.Page > 1)
    {
        <a asp-action="Customer" class="w-auto border-[0.5px] bg-primary px-4 py-2 text-center text-xs font-semibold text-white transition-colors duration-200 hover:cursor-pointer hover:bg-transparent hover:text-primary md:w-auto" asp-route-page="@(ViewBag.Page - 1)">Prev</a>
    }

    <span>@ViewBag.Page / @ViewBag.TotalPages</span>

    @if (ViewBag.Page < ViewBag.TotalPages)
    {
        <a asp-action="Customer" class="w-auto border-[0.5px] bg-primary px-4 py-2 text-center text-xs font-semibold text-white transition-colors duration-200 hover:cursor-pointer hover:bg-transparent hover:text-primary md:w-auto" asp-route-page="@(ViewBag.Page + 1)">Next</a>
    }
</div>
