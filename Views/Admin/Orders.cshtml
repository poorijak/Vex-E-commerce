@model List<Vex_E_commerce.Models.Order>
@{
    ViewData["Title"] = "Order Management";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var Keyword = ViewBag.keyword;
}

<div class="mx-5 md:mx-0">
    <div class="mb-3 flex flex-col items-start gap-3 md:flex-row md:items-center md:justify-between md:gap-0">
        <div>
            <h1 class="text-xl font-bold md:text-2xl">Orders Management</h1>
            <p class="text-muted-foreground text-xs md:text-sm">
                view and manage customer orders
            </p>
        </div>
    </div>

    <div class="my-4 h-px flex-1 border-b border-border"></div>

    <div class="my-4 flex justify-start md:w-64">
        <form asp-action="Orders" class="relative w-full" asp-controller="Admin">
            <input placeholder="e.g. #ORD-2025-001" name="keyword" value="@Context.Request.Query["keyword"]" class="h-9 w-full rounded-full border-[#D9D9D9] border-[0.5px] bg-white pl-8 text-sm placeholder:text-sm placeholder:text-[#D9D9D9]" />
            <svg xmlns="http://www.w3.org/2000/svg" class="fill fill-muted-foreground absolute top-2.5 left-2.5 size-4" viewBox="0 0 256 256"><path d="M229.66,218.34l-50.07-50.06a88.11,88.11,0,1,0-11.31,11.31l50.06,50.07a8,8,0,0,0,11.32-11.32ZM40,112a72,72,0,1,1,72,72A72.08,72.08,0,0,1,40,112Z"></path></svg>
            <a asp-action="Orders" asp-controller="Admin" class="absolute top-2.5 right-2.5 @(string.IsNullOrWhiteSpace(ViewBag.keyword as string) ? "hidden" : "")"><i class="ph ph-x"></i></a>
        </form>
    </div>

    <div>
        <div class="grid grid-cols-1 p-0">
            <div class="relative overflow-x-auto">
                <table class="w-full text-left text-sm rtl:text-right">
                    <thead class="text-muted-foreground bg-[#F4F4F5] text-xs uppercase">
                        <tr>
                            <th class="px-6 py-3">Order ID</th>
                            <th class="px-6 py-3">Customer</th>
                            <th class="px-6 py-3">Date</th>
                            <th class="px-6 py-3">Item</th>
                            <th class="px-6 py-3">Amount</th>
                            <th class="px-6 py-3">Status</th>
                            <th class="px-6 py-3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr class="border-b border-gray-200 text-primary">

                                <!-- 1) Order ID -->
                                <td class="px-6 py-4">@i.OrderNumber</td>

                                <!-- 2) Customer -->
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2 font-medium">
                                        @if (!string.IsNullOrEmpty(i.customer?.ProfilePictureUrl))
                                        {
                                            <img src="/Images/Avatar/Avatar.webp" class="size-6 rounded-full" />
                                        }
                                        <span>@i.customer.Email</span>
                                    </div>
                                </td>

                                <!-- 3) Date -->
                                <td class="px-6 py-4">@i.createdAt</td>

                                <!-- 4) Item Count -->
                                <td class="px-6 py-4">@i.Items?.Count</td>

                                <!-- 5) Amount -->
                                <td class="px-6 py-4">@i.totalAmount</td>

                                <!-- 6) Status -->
                                <td class="px-6 py-4">@i.status</td>

                                <!-- 7) Action -->
                                <td class="px-6 py-4">
                                    <a asp-controller="Admin"
                                       asp-action="OrderDetail"
                                       asp-route-id="@i.Id"
                                       class="underline">
                                        View
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <div class="mt-5 flex items-center justify-center gap-5 p-5 md:p-0">

        @if (ViewBag.Page > 1)
        {
            <a asp-action="Orders"
               asp-route-page="@(ViewBag.Page - 1)"
               class="w-auto border-[0.5px] bg-primary px-4 py-2 text-center text-xs font-semibold text-white hover:bg-transparent hover:text-primary">
                Prev
            </a>
        }

        <span>@ViewBag.Page / @ViewBag.TotalPages</span>

        @if (ViewBag.Page < ViewBag.TotalPages)
        {
            <a asp-action="Orders"
               asp-route-page="@(ViewBag.Page + 1)"
               class="w-auto border-[0.5px] bg-primary px-4 py-2 text-center text-xs font-semibold text-white hover:bg-transparent hover:text-primary">
                Next
            </a>
        }

    </div>

</div>
