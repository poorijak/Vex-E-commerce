@{
}
@model Vex_E_commerce.Models.CategoryPageViewModel

@{
    ViewData["Title"] = "หมวดหมู่สินค้า";
}

<h2>หมวดหมู่สินค้า</h2>

<ul class="list-group">
    @foreach (var category in Model.Categories)
    {
        <li class="list-group-item">
            <a href="@Url.Action("Detail", "Category", new { id = category.Id })">
                @category.Title
            </a>
        </li>
    }
</ul>

<section class="min-h-screen bg-gray-50 py-10">
    <div class="mx-auto max-w-6xl px-4">
        <div class="mb-10 text-center">
            <h1 class="text-3xl font-bold text-indigo-600">@ViewData["Title"]</h1>
            <p class="mt-2 text-gray-500">เลือกหมวดหมู่เพื่อดูสินค้าภายใน</p>
        </div>

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
            @foreach (var category in Model.Categories)
            {
                <div class="flex flex-col items-center rounded-2xl bg-white p-6 text-center shadow-md transition hover:shadow-lg">
                    <h2 class="mb-2 text-xl font-semibold text-gray-800">@category.Title</h2>
                    <p class="mb-4 text-sm text-gray-500">
                        สินค้าทั้งหมด: <span class="font-medium">@category.products.Count()</span>
                    </p>
                    <a href="@Url.Action("Detail", "Category", new { id = category.Id })"
                       class="mt-auto rounded-lg bg-indigo-500 px-4 py-2 text-white transition hover:bg-indigo-600">
                        ดูสินค้า
                    </a>
                    <p class="mt-3 text-xs text-gray-400">
                        สร้างเมื่อ: @category.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")
                    </p>
                </div>
            }
        </div>
    </div>
</section>
